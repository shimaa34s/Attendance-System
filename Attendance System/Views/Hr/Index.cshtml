@model IEnumerable<Attendance_System.Models.Student>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <a asp-action="EditHr" asp-controller="Hr" asp-route-id="@ViewBag.Id" class="btn btn-success">Edit Your Profile</a>
   
    <a asp-action="UploadStudents" asp-controller="Hr" asp-route-id="@ViewBag.Id" class="btn btn-success">UploadStudents</a>

    


    <br />
    <br />
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.img)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Verified)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Dnum)
                </th>
             
                <th>Operation</th>
        </tr>
    </thead>
    <tbody>
            @if (Model.Count() != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.img)
                        </td>
                     
                        <td>
                            @item.Verified
@*                             @Html.DisplayFor(modelItem => item.Verified)
 *@                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Department.DeptName)
                        </td>
                     
                        <td>
                            @Html.ActionLink("Edit", "Edit", new {  id=item.Id  })  |
                            @Html.ActionLink("StudentDetails", "StudentDetails", new { id = item.Id })
@*                             <a asp-controller="hr" asp-action="StudentDetails" class="btn btn-success" asp-route-id="@item.Id">Details</a>
 *@                            @*                             @Html.ActionLink("Delete", "Delete", new {  id=item.Id })
 *@                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="8" >Not Found</td></tr>
            }
    </tbody>
</table>
</body>
</html>
