@model List<Hr>
@{
   // Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <a asp-action="CreateHr" asp-controller="Admin"  class="btn btn-success">Create HR</a>
    <a asp-action="index" asp-controller="Department" class="btn btn-success">Department</a>
    <a asp-action="index" asp-controller="Course" class="btn btn-success"> Course</a>
    <a asp-action="StList" asp-controller="Admin" class="btn btn-success">Student</a>

    <br />
    <br />
     <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th> Id</th>
                <th> Name</th>
                <th> Email</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>
                            @Html.RouteLink("edit", new { action = "edit", id = item.Id }, new { @class = "btn btn-info" }) |
                            @Html.RouteLink("details", new { action = "details", id = item.Id }, new { @class = "btn btn-info" }) |
                            @Html.RouteLink("delete", new { action = "delete", id = item.Id }, new { @class = "btn btn-info" })

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="4" class="align-content-center">Not Found</td></tr>
            }

        </tbody>
    </table>
    <br />

</body>
</html>
