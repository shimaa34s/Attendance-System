@model IEnumerable<Attendance_System.Models.Student>

@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StList</title>
</head>
<body>
<p>
        <a asp-action="CreateST" class="btn btn-info">Create New</a>
        <a asp-action="ShowAttendance" class="btn btn-info">Show Attendance</a>

</p>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dnum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hnum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Verified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.img)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DeptName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hr.Name)
            </td>
            <td>
                   @item.Verified
@*                 @Html.DisplayFor(modelItem => item.Verified)
 *@            </td>
            <td>
                        @Html.ActionLink("Edit", "EditStudent", new { id = item.Id }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("StudentDetails", "StudentDetails","Hr", new { id = item.Id }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Delete", "DeleteStudent", new {  id=item.Id  }, new { @class = "btn btn-info" })
                        @if (item.Verified == true)
                        {
                            <a asp-action="GenerateStudentPdf" asp-route-id="@item.Id" class="btn btn-info">Download Student Data</a>
                        }

                    </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
